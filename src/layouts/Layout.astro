---
import "@fontsource-variable/onest"
import Header from '../components/Header.astro';
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta property="og:image" content="/pictures/main.webp" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="relative text-white">
		<div class= "absolute top-0 bottom-0 -z-10 min-h-screen w-full [background:radial-gradient(125%_125%_at_50%_30%,#000_40%,#63e_100%)]"></div>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		box-sizing: border-box;
		scroll-behavior: smooth; /* animacion scroll */ 
	}
	
	body {
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;

	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

</style>
